<Window x:Class="WpfApp17_GroupBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp17_GroupBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <GroupBox Header="Group A" Margin="10" Height="100" FontSize="20">
                <StackPanel>
                    <RadioButton Content="AAA" FontSize="20"></RadioButton>
                    <RadioButton Content="BBB" FontSize="20"></RadioButton>
                </StackPanel>
            </GroupBox>
            <GroupBox Margin="10">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="Check Box" FontSize="20"/>
                        <TextBlock Text="AAA" FontSize="20" Margin="10,0,0,0"/>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel>
                    <RadioButton Content="CCC" FontSize="20"></RadioButton>
                    <RadioButton Content="DDD" FontSize="20"></RadioButton>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
