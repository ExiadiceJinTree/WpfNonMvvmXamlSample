<Window x:Class="WpfApp12_SQLiteAndListView.SaveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp12_SQLiteAndListView"
        mc:Ignorable="d"
        Title="SaveWindow" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="5">
            <TextBox x:Name="CustomerNameTextBox" FontSize="20"/>
            <Button x:Name="SaveButton" Content="Save" FontSize="20" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
