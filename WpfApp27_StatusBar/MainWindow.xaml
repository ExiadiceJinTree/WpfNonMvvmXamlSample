<Window x:Class="WpfApp27_StatusBar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp27_StatusBar"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <StatusBar VerticalAlignment="Bottom" Height="25">
            <ProgressBar Width="80" Height="15" Value="60"/>
            <Separator/>
            <Label Content="60%" FontSize="8"/>
            <Separator/>
            <Label Content="Processing..." FontSize="8"/>
        </StatusBar>
    </Grid>
</Window>
